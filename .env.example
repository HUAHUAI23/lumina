# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Authentication
# Generate a secure random string (32+ characters): openssl rand -base64 32
AUTH_SECRET=your-secret-key-change-me-min-32-chars

# GitHub OAuth (optional, for GitHub login)
# See docs/github-oauth-setup.md for setup instructions
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# User Registration (optional)
# Initial credits given to new users (default: 0)
INITIAL_CREDITS=500

# Environment (optional, defaults to development)
NODE_ENV=development

# Login Methods Control (optional, defaults shown)
# Set to false to disable specific login methods
ENABLE_PASSWORD_AUTH=true
ENABLE_GITHUB_AUTH=true
ENABLE_GOOGLE_AUTH=false